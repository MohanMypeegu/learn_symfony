<!DOCTYPE html>
<html>
<head>
<title>Welcome to Symfony</title> 
	{% block stylesheets %}
		<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
		<link href="{{ asset('css/AdminLTE.min.css') }}" rel="stylesheet" />
		<link href="{{ asset('css/_all-skins.min.css') }}" rel="stylesheet" /> 
		<link href="{{ asset('css/datepicker.css') }}" rel="stylesheet" />
	{% endblock %}
	
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

</head>
<body>
	<div class="input-group">
	<h2>Create Student</h2>
	<form name="formname" id="formname" method="POST" action="#">
		<div class="box-body">	
		
		<div class="form-group">
			<label for="name">Student Name: </label>
			<input type="text" name="name" id="name" value="" class="form-control" placeholder="Student Name"/> <br/>
		</div>
		
		<div class="form-group">
			<label for="">Reg No: </label>
			<input type="text" name="reg_no" id="reg_no" value="" class="form-control" placeholder="Student Reg No"/> <br/>
		</div>
		
		<div class="form-group">
        	<label>Reg Date:</label>
            <input type="text" id="reservation" class="form-control" value="01/04/2016" /></p>
        </div>
		
		<div class="form-group">
		<label for="">Gender: </label><select name="gender" id="gender" value="" class="form-control" >
			<option value="0">--Enter Gender--</option>
			<option value="M">Male</option>
			<option value="F">Female</option>
		</select> <br/>
		
		<div class="form-group">
			<label for="">Address: </label>
			<textarea name="address" id="address" rows="5" value="" class="form-control" placeholder="Student Address"> </textarea> <br/>
		</div>
		
		<div class="form-group">
			<label for="">Remark: </label>
			<input type="text" name="remark" id="remark" value="" class="form-control" placeholder="Student Remark"/> <br/>
		</div>
		
		<div class="form-group">
			<label for="">Status: </label>
			<input type="text" name="status" id="status" value="" class="form-control" placeholder="Student Status"/> <br/>
		</div>
		
		</div>
				
		<div class="box-footer">
        	<button type="submit" class="btn btn-primary">Submit</button>
        </div>
	</form>
	</div>
	

	{% block javascripts %}
		<script src="{{ asset('js/jQuery-2.1.4.min.js') }}"></script>
		<script src="{{ asset('js/datepicker.js') }}"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"></script>
	{% endblock %}
	
	<script>
      $(function () {
        
        //Date range picker
        $('#reservation').DatePicker({
        	format:'m/d/Y',
        	date: $('#reservation').val(),
        	current: $('#reservation').val(),
        	starts: 1,
        	position: 'r',
        	onBeforeShow: function(){
        		$('#reservation').DatePickerSetDate($('#reservation').val(), true);
        	},
        	onChange: function(formated, dates){
        		$('#reservation').val(formated);
        		$('#reservation').DatePickerHide();
        	}
        });
      });
    </script>
  
  
</body>
</html>